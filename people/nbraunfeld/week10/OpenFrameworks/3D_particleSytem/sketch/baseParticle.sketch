#pragma once


class BaseParticle
{
public:
	BaseParticle(): 
	    drag(0.99),
	    bounciness(0.8),
	    width(20),
	    height(20),
	    depth(20)
	{
	}

    virtual ~BaseParticle()
    {
    }

    virtual void update() 
    {
        velocity += acceleration;   
        velocity *= drag;
        position += velocity; 
    }
    
    virtual void draw()
    {  
        ofPushStyle();
        ofFill();
        ofSetColor(color);
        ofDrawSphere(position, (width + height + depth) / 3 / 2);
        ofPopStyle();
    }
    
    ofVec3f position;
    ofVec3f velocity;
    ofVec3f acceleration;
    
    float drag;
    float bounciness;

    float width;
    float height;
    float depth;
    
    ofColor color;
};