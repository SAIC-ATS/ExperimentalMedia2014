
void setup() {
	// put your setup code here, to run once:
	ofSetWindowShape(510, 400);
	ofBackground(255);
	
	
}

void draw() {
	// put your main code here, to run once each frame:
    for(int i = 0; i < 256; i ++)
    {
            if (i % 2 == 2 || 4)
        {
        ofSetColor(250, 0, 0);
        ofLine (i*2, 0, i*2, ofGetHeight());
        }

            if (i % 2 == 1)
        {
        ofSetColor(250, 250, 0);
        ofLine (i*2, 0, i*2, ofGetHeight());
        }
    }
}
